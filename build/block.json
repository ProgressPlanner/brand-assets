{
  "apiVersion": 2,
  "name": "my-plugin/color-scheme",
  "title": "Color Scheme",
  "icon": "art",
  "category": "design",
  "description": "A block that displays a color scheme of your choice.",
  "supports": {
    "align": true
  },
  "attributes": {
    "swatches": {
      "type": "array",
      "default": []
    },
    "swatchWidth": {
      "type": "number",
      "default": 150
    },
    "swatchHeight": {
      "type": "number",
      "default": 150
    },
    "swatchGap": {
      "type": "number",
      "default": 20
    },
    "borderWidth": {
      "type": "number",
      "default": 1
    },
    "borderRadius": {
      "type": "number",
      "default": 0
    },
    "borderColor": {
      "type": "string",
      "default": "#888888"
    },
    "showCMYK": {
      "type": "boolean",
      "default": false
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:../assets/editor-style.css",
  "style": "file:../assets/style.css"
}